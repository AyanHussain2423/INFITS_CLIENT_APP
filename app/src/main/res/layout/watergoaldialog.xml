<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="400dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    app:cardElevation="5dp"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="    Set goal for water intake"
                android:fontFamily="@font/nats_regular"
                android:textAlignment="center"
                android:textColor="#0051AA"
                android:textSize="23sp" />

            <ImageView
                android:id="@+id/close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:src="@drawable/ic_baseline_close_24"
                app:tint="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/valueIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:fontFamily="@font/nats_regular"
            android:text="(in liters)"
            android:textAlignment="center"
            android:textColor="#0051AA"
            android:textSize="15sp" />

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="180dp"
            android:layout_height="0.8dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            app:dividerColor="#CADAF3"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set quantity!"
                android:layout_gravity="center"
                android:fontFamily="@font/nats_regular"
                android:textAlignment="center"
                android:textColor="#0051AA"
                android:textSize="21sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:text="1 Glass (in ml) =  "
                android:fontFamily="@font/nats_regular"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textColor="#0051AA"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/number_Picker_up_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginBottom="-13dp"
                    android:src="@drawable/baseline_keyboard_arrow_up_24"/>
                <TextView
                    android:id="@+id/current_number_picked"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="200"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nats_regular"
                    android:textAlignment="center"
                    android:textColor="#0051AA"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/number_Picker_down_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:clickable="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="-3dp"
                    android:src="@drawable/baseline_keyboard_arrow_down_24"/>
            </LinearLayout>



        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:cardCornerRadius="50dp"
            android:elevation="0.8dp"
            android:layout_margin="10dp"
            android:outlineSpotShadowColor="#8F9296">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/selected_text"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="-7dp"
                    android:text="0.4 L"
                    android:background="@drawable/selecter_shape"
                    android:layerType="hardware"
                    android:fontFamily="@font/nats_regular"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_weight="1"
                    android:textColor="#0051AA"/>

                <TextView
                    android:id="@+id/selected_glass_number"
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-7dp"
                    android:text="2 Glass"
                    android:fontFamily="@font/nats_regular"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:textColor="#0051AA"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.slider.Slider
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="13dp"
            android:stepSize="0.20"
            android:thumb="@drawable/thumb_for_water_draw"
            android:value="0.40"
            android:valueFrom="0.40"
            android:valueTo="4.0"
            app:tickVisible="true"
            app:tickColor="@color/blue"
            app:thumbColor="#0051AB"
            app:thumbRadius="10dp"
            app:tickColorActive="#0051AB"
            app:tickColorInactive="#DDECFF"
            app:trackColorActive="#0051AB"
            app:trackColorInactive="#DDECFF"
            app:trackHeight="3dp" />

        <androidx.appcompat.widget.AppCompatSeekBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:thumb="@drawable/thumb_for_water_draw"
            android:visibility="gone"
            android:value="0"
            android:valueFrom="0"
            android:valueTo="1000"
            app:thumbColor="#0051AB"
            app:thumbRadius="5dp"
            app:tickColorActive="#0051AB"
            app:tickColorInactive="#DDECFF"
            app:trackColorActive="#0051AB"
            app:trackColorInactive="#DDECFF"
            app:trackHeight="2dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/r1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:fontFamily="@font/nats_regular"
                android:gravity="center"
                android:text="0.4 L"
                android:textSize="15dp" />
            <TextView
                android:id="@+id/r2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 L"
                android:textSize="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/nats_regular"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/r3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1.6 L"
                android:textSize="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/nats_regular"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/r4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.2 L"
                android:textSize="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/nats_regular"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/r5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2.8 L"
                android:textSize="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/nats_regular"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/r6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.4 L"
                android:textSize="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/nats_regular"
                android:layout_gravity="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/r7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4 L"
                android:textSize="15dp"
                android:layout_weight="1"
                android:fontFamily="@font/nats_regular"
                android:layout_gravity="center"
                android:gravity="center"/>

        </LinearLayout>


        <Button
            android:id="@+id/set_water_goal"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#52A4FF"
            android:text="Set Goal"
            android:textAllCaps="false"
            android:layout_marginBottom="30dp"
            app:cornerRadius="20sp"
            android:textSize="15sp"
            android:fontFamily="@font/nats_regular"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>